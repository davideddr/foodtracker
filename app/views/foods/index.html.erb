<div class="container-fluid">
  <div class="row up">
    <h1>Listing foods</h1>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 center table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Units</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.quantity %></td>
            <td><%= food.units %></td>
            <td class="command"><%= link_to 'Edit', edit_food_path(food), :class=>"btn btn-sm btn-primary"%></td>
            <td class="command"><%= link_to 'Destroy', food_path(food),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              remote: true,
              :class=>"btn btn-sm btn-danger"
              %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <script type="text/javascript">
    $(document).ready(function(){
      $('a[data-method="delete"]').bind('ajax:complete',function(evt,data,status,xhr){
        $(this).closest('tr').fadeOut();
      })
    });
  </script>